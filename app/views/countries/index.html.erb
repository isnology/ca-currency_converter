<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Currency code</th>
      <th>To currency</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.name, country, class: 'btn btn-success' %></td>
        <td><%= country.code %></td>
        <td><%= country.currency_code %></td>
        <td><%= country.to_currency %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class: 'btn btn-warning' %>
            <%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn
        btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path, class: 'btn btn-warning' %>
